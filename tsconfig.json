{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/authors-storage": [
        "libs/authors-storage/src"
      ],
      "@app/authors-storage/*": [
        "libs/authors-storage/src/*"
      ],
      "@app/authorship-storage": [
        "libs/authorship-storage/src"
      ],
      "@app/authorship-storage/*": [
        "libs/authorship-storage/src/*"
      ],
      "@app/books-storage": [
        "libs/books-storage/src"
      ],
      "@app/books-storage/*": [
        "libs/books-storage/src/*"
      ],
      "@app/storage": [
        "libs/storage/src"
      ],
      "@app/storage/*": [
        "libs/storage/src/*"
      ]
    }
  }
}